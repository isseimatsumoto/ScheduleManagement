<h2>スケジュール新規作成</h2>

<%= form_for @schedule do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_day ,"開始日" %></th>
            <td><%= f.date_field :start_day %></td>
        </tr>
        <tr>
            <th><%= f.label :finish_day ,"終了日" %></th>
            <td><%= f.date_field :finish_day %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td>
                <%= f.check_box :all_day %>
                <div>終日の場合はチェックを入れます</div>
            </td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
            <p><%= f.submit "スケジュールを新規登録する"%></p>
            <p><%= link_to "スケジュール一覧に戻る", :schedules %></p>
    </div>
<% end %>